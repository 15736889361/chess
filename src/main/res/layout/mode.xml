<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/game_mode"
        android:padding="10dp">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="1"
            android:drawableRight="@drawable/ic_2player"
            android:drawableEnd="@drawable/ic_2player"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:text="2-player, standard chess board, 16 pieces each"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="2"
            android:drawableRight="@drawable/ic_2player"
            android:drawableEnd="@drawable/ic_2player"
            android:layout_marginBottom="10dp"
            android:drawablePadding="10dp"
            android:text="2-player, extended board, 32 pieces each"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:tag="3"
            android:drawableRight="@drawable/ic_4player"
            android:drawableEnd="@drawable/ic_4player"
            android:drawablePadding="10dp"
            android:text="4-player in 2 teams"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:tag="4"
            android:drawableRight="@drawable/ic_4player"
            android:drawableEnd="@drawable/ic_4player"
            android:text="4-player, no teams"/>


    </RadioGroup>

    <CheckBox
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local game"
        android:id="@+id/local"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        android:id="@+id/ok"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>